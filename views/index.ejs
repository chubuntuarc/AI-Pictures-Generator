<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Generation</title>
    <style>
        body { font-family: sans-serif; line-height: 1.6; padding: 20px; max-width: 800px; margin: auto; }
        textarea { width: 100%; min-height: 150px; margin-bottom: 10px; }
        button, input[type="submit"] { padding: 10px 15px; cursor: pointer; }
        .error { color: red; font-weight: bold; margin-bottom: 10px; }
        .sheet-link { margin-top: 15px; font-size: 0.9em; }
        .loader {
            border: 4px solid #f3f3f3; /* Light grey */
            border-top: 4px solid #3498db; /* Blue */
            border-radius: 50%;
            width: 20px;
            height: 20px;
            animation: spin 1s linear infinite;
            display: none; /* Hidden by default */
            margin-left: 10px;
            vertical-align: middle;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <h1>Generate Images from Prompts</h1>

    <% if (error) { %>
        <p class="error"><%= error %></p>
    <% } %>

    <form action="/generate" method="POST">
        <label for="prompts">Enter Prompts (one per line):</label><br>
        <textarea id="prompts" name="prompts" required></textarea><br>

        <button type="button" id="loadPromptsBtn">Load Prompts from Sheet</button>
        <div id="loader" class="loader"></div>
        <span id="loadError" class="error" style="margin-left: 10px;"></span>
        <br><br>

        <input type="submit" value="Generate Images">
    </form>

    <% if (google_sheet_id) { %>
        <p class="sheet-link">
            Edit prompts in the Google Sheet:
            <a href="https://docs.google.com/spreadsheets/d/<%= google_sheet_id %>/edit" target="_blank">Open Sheet</a>
        </p>
    <% } else { %>
         <p class="sheet-link">GOOGLE_SHEET_ID environment variable not set. Cannot link to sheet.</p>
    <% } %>


    <script>
        const loadBtn = document.getElementById('loadPromptsBtn');
        const promptsTextarea = document.getElementById('prompts');
        const loader = document.getElementById('loader');
        const loadErrorSpan = document.getElementById('loadError');

        loadBtn.addEventListener('click', async () => {
            loader.style.display = 'inline-block'; // Show loader
            loadErrorSpan.textContent = ''; // Clear previous errors
            loadBtn.disabled = true; // Disable button during fetch

            try {
                const response = await fetch('/load_prompts'); // Fetch from the Node.js endpoint
                const data = await response.json();

                if (response.ok && data.success) {
                    promptsTextarea.value = data.prompts; // Populate textarea
                } else {
                    // Display error message from the server
                    loadErrorSpan.textContent = `Error: ${data.error || 'Failed to load prompts.'}`;
                    console.error('Failed to load prompts:', data.error);
                }
            } catch (error) {
                loadErrorSpan.textContent = 'Error: Could not connect to server.';
                console.error('Fetch error:', error);
            } finally {
                loader.style.display = 'none'; // Hide loader
                loadBtn.disabled = false; // Re-enable button
            }
        });
    </script>

</body>
</html>
